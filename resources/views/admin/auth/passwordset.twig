{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
		
		<form id="password_set_form" name="password_set_form" class="form-horizontal col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3" role="form" method="post" action="{{ path_for('admin.setpassword',{'id':id,'ownercode':ownercode}) }}" autocomplete="off" data-parsley-excluded="input[type=button], input[type=submit], input[type=reset], input[type=hidden], [disabled], :hidden" data-parsley-trigger="keyup" data-parsley-validate>
			<div class="mx-auto">
			<h1 class="text-center">Set Password</h1>
            <strong>Your password must contain at least 1 uppercase letter, 1 lowercase letter and minimum 8 characters.</strong> 
		</div>
			<div class="form-group{{ errors.password ? ' has-error' : '' }}">
                
                    <div class="">
                    	<label class="control-label" for="password">Password</label>
                        <input id="password1" type="password" class="form-control" name="password" data-parsley-errors-container=".errorspannewpassinput" data-parsley-minlength="8"
    data-parsley-required-message="Please enter new password."
    data-parsley-uppercase="1"
    data-parsley-lowercase="1"
    data-parsley-required>
                        {% if errors.password %}
                        <span class="help-block">{{ errors.password | first }}</span>
                        {% endif %}
                        <span class="help-block errorspannewpassinput"></span>
                    </div>
            </div>
            <div class="form-group{{ errors.confirm_password ? ' has-error' : '' }}">
                
                    <div class="">
                    	<label class="control-label">Confirm Password</label>
                        <input type="password"  name="confirm_password" class="form-control" data-parsley-errors-container=".errorspanconfirmnewpassinput" data-parsley-minlength="8"
    data-parsley-required-message="Please re-enter new password."
    data-parsley-equalto="#password1"
    data-parsley-required>
                        {% if errors.confirm_password %}
                        <span class="help-block">{{ errors.confirm_password | first }}</span>
                        {% endif %}
                        <span class="help-block errorspanconfirmnewpassinput"></span>
                    </div>
            </div>
            <input type="hidden" name="owner_id" value="{{ id }}">
            <input type="hidden" name="owner_code" value="{{ ownercode }}">
            <div class="form-group">
            <button type="submit" class="btn btn-tommy action-btn">Submit</button>
            </div>
            {{ csrf.field | raw }}
		</form>

	</div>
    
{% endblock %}
{% block parselyjs %}
<script src="/assets/global/scripts/parsley.min.js" type="text/javascript"></script>
{% endblock %}
{% block passwordvalidationjs %}
<script src="/assets/global/scripts/password.validation.js" type="text/javascript"></script>
{% endblock %} 